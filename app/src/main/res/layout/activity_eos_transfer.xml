<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lay_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin15"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin10"
                android:text="From"
                android:textColor="@color/black"
                android:textSize="@dimen/margin18" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin15"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="@dimen/margin10"
                android:text="dilloneos"
                android:textColor="@color/black"
                android:textSize="@dimen/margin18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin15"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin10"
                android:text="To"
                android:textColor="@color/black"
                android:textSize="@dimen/margin18" />

            <EditText
                android:id="@+id/ed_to_who"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin15"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="@dimen/margin10"
                android:maxLength="12"
                android:hint="输入账号名[a-z 1-5 .]小写开头 "
                android:digits=".12345qwertyuiopasdfghjklzxcvbnm"
                android:text="victor"
                android:textColor="@color/black"
                android:textSize="@dimen/margin18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin15"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin10"
                android:text="Quan.."
                android:textColor="@color/black"
                android:textSize="@dimen/margin18" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin15"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="@dimen/margin10"
                android:text="0.1000 EOS"
                android:textColor="@color/black"
                android:textSize="@dimen/margin18" />

        </LinearLayout>



        <TextView
            android:id="@+id/tv_eos_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin15"
            android:gravity="center"
            android:padding="@dimen/margin10"
            android:text="立即转账"
            android:textColor="@color/black"
            android:textSize="@dimen/margin18" />


    </LinearLayout>


</RelativeLayout>

